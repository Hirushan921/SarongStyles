    <style name="editTextLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlActivated">@color/apptheme</item>
        <item name="colorControlHighlight">@color/apptheme</item>
        <item name="colorControlNormal">@color/light_grey</item>
    </style>

    <style name="editTextSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@android:color/transparent</item> //NO UNDERBAR
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#BFBFBF</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/apptheme</item>
        <item name="colorControlActivated">@color/apptheme</item>
